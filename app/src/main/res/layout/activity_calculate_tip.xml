<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepath.example.tipcalculator.app.CalculateTipActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etBillTotal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter bill amount" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sbTipAmnt"
        android:layout_marginTop="43dp"
        android:max="50"
        android:layout_below="@+id/etBillTotal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etBillTotal"
        android:layout_alignEnd="@+id/etBillTotal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#00688B"
        android:text="% Tip"
        android:id="@+id/tvTipPercent"
        android:layout_below="@+id/sbTipAmnt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Final Bill per Person: "
        android:textColor="#00688B"
        android:id="@+id/textView"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtFinalAmnt"
        android:textColor="#0D4F8B"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView" />

    <NumberPicker
        android:layout_width="45dp"
        android:layout_height="100dp"
        android:id="@+id/numberPicker"
        android:layout_marginBottom="56dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Final Bill: "
        android:textColor="#00688B"
        android:id="@+id/textView2"
        android:layout_below="@+id/txtFinalAmnt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/totalBill"
        android:textColor="#0D4F8B"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/pic1"
        android:src="@drawable/user2"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/pic2"
        android:src="@drawable/user2"
        android:layout_alignTop="@+id/numberPicker"
        android:layout_toRightOf="@+id/pic1"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/pic3"
        android:src="@drawable/user2"
        android:layout_alignTop="@+id/numberPicker"
        android:layout_toRightOf="@+id/pic2"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/pic4"
        android:src="@drawable/user2"
        android:layout_alignTop="@+id/numberPicker"
        android:layout_toRightOf="@+id/pic3"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/pic5"
        android:src="@drawable/user2"
        android:layout_toRightOf="@+id/pic4"
        android:layout_alignTop="@+id/numberPicker" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/pic6"
        android:src="@drawable/user2"
        android:layout_alignBottom="@+id/numberPicker"
        android:layout_toRightOf="@+id/textView2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/pic7"
        android:src="@drawable/user2"
        android:layout_alignBottom="@+id/numberPicker"
        android:layout_toRightOf="@+id/pic6" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/pic8"
        android:src="@drawable/user2"
        android:layout_alignBottom="@+id/numberPicker"
        android:layout_toRightOf="@+id/pic7" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/pic9"
        android:src="@drawable/user2"
        android:layout_alignBottom="@+id/numberPicker"
        android:layout_toRightOf="@+id/pic8" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/pic10"
        android:src="@drawable/user2"
        android:layout_alignBottom="@+id/numberPicker"
        android:layout_toRightOf="@+id/pic9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Number of people to split:"
        android:textColor="#00688B"
        android:id="@+id/textView3"
        android:layout_above="@+id/numberPicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />


</RelativeLayout>